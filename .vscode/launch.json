{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Debug",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.api:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000"
      ],
      "python": "${workspaceFolder}/backend/.venv/bin/python",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env",
      "console": "integratedTerminal",
      "env": {
        "ENVIRONMENT": "development",
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "justMyCode": true
    }
  ]
}