# Frontend Environment Variables for Local Development
# Copy this file to .env.local and update the values

# Backend API Base URL
# This is the URL where your backend API is running
NEXT_PUBLIC_API_BASE_URL=http://localhost:8085

# Note: Only variables prefixed with NEXT_PUBLIC_ are available in the browser
# Other variables are only available on the server side (API routes, server components)
NEXT_PUBLIC_AUTH0_DOMAIN=your-tenant.us.auth0.com
NEXT_PUBLIC_AUTH0_CLIENT_ID=your-client-id
NEXT_PUBLIC_AUTH0_AUDIENCE=https://dosibridge-api